package module1;

public class DataTypes {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		
		///////////////////////task1
		//// assigning a *double* variable to the value of 5.0
		double doubVar = 5.0;
		System.out.println("the value of doubVar is " +doubVar);
		
		
		///////////////////////task2
		////assigning "float","int","long","byte" variables to the value of 5.0
		float floatVar = (int) 5.0;
	    int   intVar = (int) 5.0;
	    long  longVar = 5;
	    byte  byteVar = 5;
	    ///printing the assigned value and names
	    System.out.println("the value of floatVar is " +floatVar);
		System.out.println("the value of intVar is "  +intVar);
		System.out.println("the value of longVar is " +longVar);
		System.out.println("the value of byteVar is " +byteVar);
		
		
		/////////////////////////task3
		///////multiplying each of the values by itself and printing the result
		////double*double
		double dd = doubVar*doubVar;
		///float*float
		float ff = floatVar*floatVar;
		///int*int
		int ii = intVar*intVar;
		///long*long
		long ll = longVar*longVar;
		///byte*byte
		int bb = (int) byteVar*byteVar;
		// printing the result of the multiplication 
		System.out.println("the value of doubVar squared is "+dd);
		System.out.println("the value of floatVar squared is "+ff);
		System.out.println("the value of intVar squared is "+ii);
		System.out.println("the value of longVar squared is "+ll);
		System.out.println("the value of  byteVar squared is "+bb);
		
		
		/////////////////////////task4
		double mix = doubVar*floatVar;
		System.out.println(mix);
		double x =  4.0;
	    short y =  20000;
	    float xy = (int)  x*y;
	    System.out.println(xy);
	    
		
		
		
	}

}
